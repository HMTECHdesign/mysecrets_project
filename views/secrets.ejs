<%- include('partials/header') %>

<div class="jumbotron text-center">
  <div class="container">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">You've Discovered My Secret!</h1>
    <h3>You can't delete any of your secrets...use annoymous names</h3>
    <p class="secret-text">
      <%= defaultSecret %> ~ <%= defaultSecretUser %> 
    </p>
      <% for(var i=0; i<displaysecrets.length; i++) { %>
            <p class="secret-text">
                <%= displaysecrets[i].secrets %> ~ <%= displaysecrets[i].username %>
            </p>
      <% } %>

    <hr>    
    <a class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a>
    <a class="btn btn-dark btn-lg" href="/submit" role="button">Submit a Secret</a>
  </div>
</div>

<%- include('partials/footer') %>
